@model TaskSchedular.Models.TaskInfo

<h1>Delete Task</h1>

<h4>Are you sure you want to delete this task?</h4>
<div>
    <h5>@Model.TaskDescription</h5>
    <dl class="row">
        <dt class="col-sm-2">Task ID</dt>
        <dd class="col-sm-10">@Model.TaskID</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate</dd>
        <dt class="col-sm-2">Expected Closure Date</dt>
        <dd class="col-sm-10">@Model.ExpectedClosureDate</dd>
        <dt class="col-sm-2">Assigned To</dt>
        <dd class="col-sm-10">@Model.AssignedTo</dd>
        <dt class="col-sm-2">Completion Status</dt>
        <dd class="col-sm-10">@Model.CompletionStatus</dd>
    </dl>

    <form asp-action="DeleteTask">
        <input type="hidden" asp-for="TaskID" />
        <input type="submit" id="btnDelete" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

